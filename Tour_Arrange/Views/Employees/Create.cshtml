@model Tour_Arrange.Models.ViewModels.EmployeeVM
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Employees", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <h2 class="mb-lg-4 text-center text-primary"> New Employee Add</h2>
        <div class="col-8">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(x => x.EmployeeName, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.BirthDate, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", Type = "date" } })
                    @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div> <div class="form-group row">
                @Html.LabelFor(x => x.JoinDate, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.JoinDate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", Type = "date" } })
                    @Html.ValidationMessageFor(x => x.JoinDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.Email, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.PicturePath, htmlAttributes: new { @class = "control-label col-3" })
                <div class="col-9">
                    @Html.TextBoxFor(x => x.PicturePath, new { @class = "form-control", Type = "file" })
                    @Html.ValidationMessageFor(x => x.PicturePath, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="row d-flex justify-content-end mb-3">
                <h5 class="col-sm-10 fw-bold">Select Department</h5>
                <a href="#" id="btnP" class="btn col-sm-2 btn-warning mr-2"><i class="fa fa-plus"></i></a>
            </div>
            <div id="DepartmentContainer">
                @Html.Action("AddNewDepartment", "Employees")
            </div>
        </div>
        <div class="d-flex justify-content-start offset-2">
            <input type="submit" value="Create" class="btn btn-primary btn-sm mt-3" />
        </div>
    </div>
    <div>
        <a href="@Url.Action("Index","Employees")" class="btn btn-link"><i class="fa fa-arrow-left"></i> Back to list</a>
    </div>
}


